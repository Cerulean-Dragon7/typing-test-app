<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestHistoryActivity">

    <LinearLayout
        android:id="@+id/TH_LL_V"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/TH_LL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_orange"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/background_orange"
                app:srcCompat="@drawable/arrow_back_image" />

            <TextView
                android:id="@+id/TH_title"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/test_history_title"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TH_LL_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background_orange"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Character"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/background_orange"
                android:drawablePadding="10dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Word"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TH_LL_button_charAndword"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:orientation="horizontal"
            tools:layout_weight="1">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="bbd                     0WPM\n11-03-2023         0%Accuracy" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="aad                     0WPM\n11-03-2023         0%Accuracy" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>